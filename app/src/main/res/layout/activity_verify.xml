<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp">

    <TextView
        android:id="@+id/token_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/set_token_textview"
        android:layout_marginTop="68dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:lineSpacingExtra="8dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        fontPath="fonts/Gotham-Bold.otf" />

    <TextView
        android:id="@+id/token_textview_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/set_token_textview_"
        android:layout_below="@+id/token_textview"
        android:layout_marginTop="68dp"
        android:textSize="20sp"
        android:lineSpacingExtra="8dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        fontPath="fonts/Gotham-Bold.otf" />

    <EditText
        android:id="@+id/token_edittext"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/token_textview_"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="32dp"
        android:paddingLeft="10dp"
        android:inputType="text"
        android:imeOptions="actionDone"
        fontPath="fonts/Gotham-Bold.otf"/>
    <!--    android:background="@drawable/rounded_edittext" -->

    <Button
        android:id="@+id/token_submit_button"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:text="@string/token_submit_button"
        android:layout_below="@+id/token_edittext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:onClick="tokenSubmit"
        fontPath="fonts/Gotham-Bold.otf"/>

</RelativeLayout>